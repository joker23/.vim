command! Totient			:read ~/.algorithms/math/Totient.java
command! Fib				:read ~/.algorithms/math/Fib0.java
command! Catalan			:read ~/.algorithms/math/Catalan.java
command! GCD				:read ~/.algorithms/math/GCD.java
command! ConvexHull		:read ~/.algorithms/geometry/ConvexHull.java

" graph Algorithms
command! BellmanFord		:read ~/.algorithms/graph/BellmanFord.java
command! MaxFlow			:read ~/.algorithms/graph/EdmoundsKarp.java
command! Kruskals		:read ~/.algorithms/graph/Kruskals.java
command! TpSort			:read ~/.algorithms/graph/Dfs_topologicalSort.java
