" this is the configuration for java
"
"author: Steven Zhang

" set :make as the javac
set makeprg=javac\ %
set errorformat=%A:%f:%l:\ %m,%-Z%p^,%-C.%#

"********************************************************
">··>···>···>··· 	start commands 		>··>···>···>···*
"********************************************************
" commands
command! Poj0 			:read ~/.vim/.template/util/PojStart0.java
command! Poj1			:read ~/.vim/.template/util/PojStart1.java
command! Run				:!java %:r

"********************************************************
">··>···>···>··· 	custom mappings		>··>···>···>···*
"********************************************************
" mapping
inoremap ;ss 	System.out.println();<ESC>1hi
inoremap ;main 	public static void main(String[] args){<ESC>o}<ESC>O

" scanner
inoremap ;iint	in.nextInt();
inoremap ;idou	in.nextDouble();
inoremap ;ii	in.next();

" BufferedReader
inoremap ;line	in.readLine();
inoremap ;split	st = new StringTokenizer(in.readLine());
inoremap ;sint	Integer.parseInt(st.nextToken());
inoremap ;sdou	Double.parseDouble(st.nextToken());
inoremap ;sstr	st.nextToken();
inoremap ;slon	Long.parseLong(st.nextToken());

"********************************************************
">··>···>···>··· Algorithm Implementation>··>···>···>···*
"********************************************************
" datastructure
command! DisjointSet		:read ~/.algorithms/datastructure/DisjointSet.java
command! Node			:read ~/.algorithms/datastructure/Node.java
command! Edge			:read ~/.algorithms/datastructure/Edge.java

" Math Algorithms
command! PrimeSieve		:read ~/.algorithms/math/PrimeSieve.java
